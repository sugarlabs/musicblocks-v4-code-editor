{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "no-mixed-spaces-and-tabs": "warn",
        "no-unused-vars": "off",
        "no-use-before-define": "off",
        "semi": ["error", "always"],
        "prefer-const": ["off"],
        "no-console": "off",
        "max-len": [
            "warn",
            {
                "code": 100,
                "ignoreTrailingComments": true,
                "ignoreComments": true,
                "ignoreStrings": true,
                "ignoreTemplateLiterals": true
            }
        ],
        "no-trailing-spaces": ["warn", { "skipBlankLines": true, "ignoreComments": true }],
        "no-duplicate-case": "error",
        "no-irregular-whitespace": "warn"
    },
    "extends": [
        "eslint:recommended",
        "prettier"
    ]
}
